<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="@dimen/title_top_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/title_top_height"
            android:layout_weight="1"
            android:text="签约进度"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"

            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:visibility="visible"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="@dimen/dingdan_big_icon_size"
            android:layout_height="@dimen/dingdan_big_icon_size"
            android:src="@drawable/fyf"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="订单号"
            android:textSize="@dimen/txt_mid_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/gerenzhongxin_padding"/>
        <TextView
            android:id="@+id/dingdan_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="1213562789"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/txt_mid_size"
            android:layout_marginLeft="@dimen/gerenzhongxin_padding"/>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="已签约"
            android:textSize="@dimen/txt_min_size"
            android:textColor="@color/background_green"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/gerenzhongxin_padding"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签约状态"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="@dimen/tuikuan_margin"
        android:layout_marginLeft="@dimen/tuikuan_margin">


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/simple_gray_stroke"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_height4"
            android:text="医生信息"
            android:textColor="@color/white"
            android:background="@drawable/green_top_corner_shape"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deep_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_height4"

            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="@dimen/simple_height4"
                android:text="姓名"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1.5"
                android:text="职称"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="2"
                android:text="医院"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1.5"
                android:text="科室"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1"
                android:text="可签约"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deep_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_height4"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/doctor_name_tv"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="@dimen/simple_height4"
                android:text="姓名"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:id="@+id/doctor_zhicheng_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1.5"
                android:text="职称"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:id="@+id/doctor_hospital_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="2"
                android:text="医院"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:id="@+id/doctor_keshi_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1.5"
                android:text="科室"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>
            <TextView
                android:id="@+id/doctor_patient_num_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/simple_height4"
                android:layout_weight="1"
                android:text="可签约"
                android:gravity="center"
                android:textSize="@dimen/txt_min_size"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <com.housekeeper.ar.healthhousekeeper.RoundImageView
                android:id="@+id/head_imageview"
                android:layout_width="@dimen/simple_height6"
                android:layout_height="@dimen/simple_height6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/header_photo"/>



            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/head_imageview"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/head_imageview"

                android:text="张三"
                android:textSize="@dimen/txt_mid_size"/>
            <TextView
                android:id="@+id/zhicheng_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name_tv"
                android:text="主任医师"
                android:textSize="@dimen/txt_min_size"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/hospital_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_tv"

                android:layout_alignLeft="@+id/name_tv"

                android:text="XXX医院"
                android:textSize="@dimen/txt_min_size" />
            <TextView
                android:id="@+id/keshi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hospital_tv"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/hospital_tv"

                android:text="XXX科"
                android:textSize="@dimen/txt_min_size"  />

            <TextView
                android:id="@+id/zhuanchang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/hospital_tv"

                android:layout_below="@+id/hospital_tv"
                android:text="专长"
                android:textSize="@dimen/txt_min_size" />
            <TextView
                android:id="@+id/tel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/zhuanchang_tv"

                android:layout_below="@+id/zhuanchang_tv"
                android:text="13821414385"
                android:textSize="@dimen/txt_min_size" />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_height6"
        android:gravity="center"



        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/simple_height4"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_mid_size"
            android:background="@drawable/simple_btn_selector"
            android:layout_marginRight="10dp"
            android:visibility="visible" />
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/simple_height4"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_mid_size"
            android:background="@drawable/simple_btn_selector"
            android:layout_marginRight="10dp"/>
       />

    </LinearLayout>


</LinearLayout>
