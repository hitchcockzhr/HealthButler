<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_top_size"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/window_top_size"
            android:text="单项服务"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_height6"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/service_name_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textSize="@dimen/txt_mid_size"
            android:gravity="center"/>

        <TextView
            android:id="@+id/service_price_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="@dimen/txt_mid_size"
            android:gravity="center"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="次数"
            android:textSize="@dimen/txt_mid_size"
            android:gravity="center"/>

        </LinearLayout>

    <ListView
        android:id="@+id/service_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@color/white"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/ok_btn"
            android:layout_width="@dimen/simple_height8"
            android:layout_height="@dimen/simple_height4"
            android:text="确定"
            android:background="@drawable/simple_btn_selector"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_mid_size" />
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="@dimen/simple_height8"
            android:layout_height="@dimen/simple_height4"
            android:text="取消"
            android:background="@drawable/simple_btn_selector"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_mid_size" />
    </LinearLayout>
</LinearLayout>
