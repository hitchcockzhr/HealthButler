<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_top_size"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/window_top_size"
            android:text="上门申请验证"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edit_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号:"
            android:textSize="@dimen/txt_min_size"
            android:layout_marginLeft="@dimen/padding_mid_size"/>
        <TextView
            android:id="@+id/tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/txt_min_size"
            android:layout_marginLeft="@dimen/padding_mid_size"/>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tuxingma_layout"
        android:background="@color/Grey"
        />
    <LinearLayout
        android:id="@+id/tuxingma_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edit_height"
        android:orientation="horizontal"
        android:layout_below="@+id/photo_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/tuxingma_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/register_edit_height"

            android:textColorHint="@color/deep_gray"
            android:hint="请输入正确的图形验证码"

            android:textSize="@dimen/txt_min_size"

            android:background="@drawable/buttonstyle"
            android:layout_marginLeft="@dimen/padding_mid_size"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/tuxingma_iv"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edit_height"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/tuxingma_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看不清？请换一张"
            android:background="@drawable/btn_green_stroke_selector"
            android:layout_marginRight="@dimen/padding_mid_size"
            android:textColor="@color/background_green"
            android:textSize="@dimen/txt_min_size"/>
        <Button
            android:id="@+id/tuxingcheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证"
            android:background="@drawable/btn_green_stroke_selector"
            android:layout_marginRight="20dp"
            android:textColor="@color/background_green"
            android:textSize="@dimen/txt_min_size"/>
    </LinearLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tuxingma_layout"
        android:background="@color/Grey"
        />
    <LinearLayout
        android:id="@+id/duanxinma_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/register_edit_height"
        android:layout_below="@+id/tuxingma_layout"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <EditText
            android:id="@+id/yanzhengma_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/register_edit_height"
            android:inputType="number"
            android:textColorHint="@color/deep_gray"
            android:hint="先验证图形验证码，再点击获取短信验证码"

            android:textSize="@dimen/txt_min_size"

            android:background="@drawable/buttonstyle"
            android:layout_marginLeft="@dimen/padding_mid_size"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/duanxinma_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取短信验证码"
            android:background="@drawable/btn_green_stroke_selector"
            android:layout_marginRight="20dp"
            android:textColor="@color/background_green"
            android:textSize="@dimen/txt_min_size"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="50dp">
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="@dimen/simple_height8"
        android:layout_height="@dimen/simple_height4"
        android:text="确定"
        android:background="@drawable/simple_btn_selector"
        android:layout_marginRight="50dp"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_mid_size" />
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/simple_height8"
        android:layout_height="@dimen/simple_height4"
        android:text="取消"
        android:background="@drawable/simple_btn_selector"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_mid_size" />
</LinearLayout>
</LinearLayout>
