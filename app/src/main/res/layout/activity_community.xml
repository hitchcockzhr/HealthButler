<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">

<LinearLayout
    android:id="@+id/choose_community_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/simple_height4"
    android:orientation="horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp">
    <TextView
        android:id="@+id/choose_community_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/simple_height4"
        android:text="社区地址维护"
        android:gravity="center_vertical"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/txt_max_size"
        android:text="@string/right_arrow"
        android:gravity="center_vertical"/>
</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"/>

   <ListView
       android:id="@+id/community_listview"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:layout_height="0dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:divider="@color/light_gray"
       android:dividerHeight="1dp"
       android:listSelector="@color/white">

   </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_height8">
        <Button
            android:id="@+id/ok_btn"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/simple_height4"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/simple_btn_selector"/>
    </LinearLayout>

</LinearLayout>
