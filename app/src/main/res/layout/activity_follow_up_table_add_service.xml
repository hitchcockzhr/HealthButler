<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_top_size"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/window_top_size"
            android:text="添加产品"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/add_package__service_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/simple_height8"
                android:gravity="center"
                android:text="套餐服务"
                android:textSize="@dimen/txt_mid_size"
                android:background="@drawable/simple_gray_stroke"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="选择最适合您的套餐，并享受套餐优惠。"
                android:textSize="@dimen/txt_min_size"
                android:layout_margin="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/add_single__service_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/simple_height8"
                android:gravity="center"
                android:text="单项服务"
                android:textSize="@dimen/txt_mid_size"
                android:background="@drawable/simple_gray_stroke"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="根据您的需要购买单独服务项目。"
                android:textSize="@dimen/txt_min_size"
                android:layout_margin="15dp"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>
