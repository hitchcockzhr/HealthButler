<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_top_size"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/window_top_size"
            android:layout_weight="1"
            android:text="会员卡充值"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"

            android:layout_marginRight="40dp"
            android:textColor="@color/white"/>

    </LinearLayout>
    <TextView
        android:id="@+id/hospital_tv"
        android:text="XX社区卫生院"
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_height4"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        />


        <TextView
            android:id="@+id/mc_type_tv"
            android:text="白金会员"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:text="充值账户："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                />
            <TextView
                android:id="@+id/zhanghu_tv"
                android:text="张三丰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:text="请充值"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                />
            <TextView
                android:id="@+id/recharge_amount_tv"
                android:text="1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                />
            <TextView
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/cash_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <RadioButton
                android:id="@+id/weixin_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                />
            <RadioButton
                android:id="@+id/zhifubao_pay_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RadioGroup>

            <ImageView
                android:layout_width="@dimen/simple_height9"
                android:layout_height="@dimen/simple_height8"
                android:src="@drawable/xianjinzhifu_tv"
                android:scaleType="centerInside"
                android:layout_marginRight="10dp"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="@dimen/simple_height9"
                android:layout_height="@dimen/simple_height8"
                android:layout_marginRight="10dp"
                android:src="@drawable/weixinzhifu_tv"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="@dimen/simple_height9"
                android:layout_height="@dimen/simple_height8"
                android:layout_marginRight="10dp"
                android:src="@drawable/zhifubao_tv"
                android:scaleType="centerInside"
                android:visibility="gone"/>

        </LinearLayout>



    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="@dimen/simple_height3"
        >
        <Button
        android:id="@+id/pay_btn"
        android:layout_width="@dimen/simple_height8"
        android:layout_height="@dimen/simple_height35"
        android:background="@drawable/simple_btn_selector"
        android:textColor="@color/white"
        android:text="确认充值"
            android:layout_marginLeft="@dimen/simple_height3"
            android:layout_marginRight="@dimen/simple_height3"
            android:textSize="@dimen/txt_mid_size"/>

        <Button
            android:id="@+id/cancel_pay_btn"
            android:layout_width="@dimen/simple_height8"
            android:layout_height="@dimen/simple_height35"
            android:background="@drawable/simple_btn_selector"
            android:textColor="@color/white"
            android:text="取消充值"
            android:layout_marginLeft="@dimen/simple_height3"
            android:layout_marginRight="@dimen/simple_height3"
            android:textSize="@dimen/txt_mid_size"/>
        
    </LinearLayout>

    

</LinearLayout>
