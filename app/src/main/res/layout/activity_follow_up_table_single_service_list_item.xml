<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/simple_height6"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@drawable/simple_gray_stroke"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/service_name_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="名称"
        android:textSize="@dimen/txt_mid_size"
        android:gravity="center"/>

    <TextView
        android:id="@+id/service_price_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="价格"
        android:textSize="@dimen/txt_mid_size"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/service_add_count_tv"
            android:layout_width="@dimen/simple_height20"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"/>
        <EditText
            android:id="@+id/service_count_et"
            android:layout_width="@dimen/simple_height4"
            android:layout_height="match_parent"
            android:text="123"
            android:inputType="number"
            android:textSize="@dimen/txt_min_size"
            android:background="@drawable/simple_gray_stroke"
            android:gravity="center"/>
        <TextView
            android:id="@+id/service_sub_count_tv"
            android:layout_width="@dimen/simple_height20"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"/>

    </LinearLayout>
</LinearLayout>
