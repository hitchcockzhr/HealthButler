<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/simple_height6"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/pay_cb"
        android:layout_width="@dimen/add_diagnosis_radiobtn_size"
        android:layout_height="@dimen/add_diagnosis_radiobtn_size"
        android:button="@null"
        android:focusable="true"
        android:background="@drawable/add_diagnosis_radiobtn_selector"
        android:checked="false"


        />

    <TextView
        android:id="@+id/dingdan_type_tv"
        android:text="类型"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/simple_height35"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/dingdan_id_tv"
        android:text="订单号"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/simple_height35"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <TextView
            android:text="¥"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/simple_height35"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/jiage_tv"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/simple_height35"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"/>
    </LinearLayout>



</LinearLayout>
