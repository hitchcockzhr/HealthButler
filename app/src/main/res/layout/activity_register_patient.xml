<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/register_layout"
	android:background="@color/white"
	android:clipToPadding="true"

	android:fitsSystemWindows="true"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/window_top_size"
		android:orientation="horizontal"
		android:background="@color/background_green"
		>
		<Button
			android:id="@+id/back_btn1"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:text="@string/left_arrow"
			android:gravity="center"
			android:textSize="@dimen/arrow_txt_size"
			android:textColor="@color/white"
			android:background="@color/background_green"/>
		<TextView
			android:id="@+id/title"
			android:layout_width="match_parent"
			android:layout_height="@dimen/window_top_size"
			android:background="@color/background_green"
			android:textColor="@color/white"
			android:textSize="@dimen/txt_max_size"
			android:gravity="center"
			android:text="患 者 注 册"
			android:layout_marginRight="40dp"

			/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/yanzhengma_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="20dp">
			<TextView
				android:id="@+id/zhanghu_tv"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/register_edit_height"
				android:layout_marginLeft="5dp"
				android:text="账号  "
				android:textSize="@dimen/txt_min_size"
				/>

			<EditText
				android:id="@+id/zhanghu_et"
				android:layout_width="match_parent"
				android:layout_height="@dimen/register_edit_height"
				android:inputType="phone"
				android:layout_marginRight="20dp"
				android:textSize="@dimen/txt_min_size"
				android:background="@drawable/register_edit"
				android:hint="请输入手机号"
				android:textColorHint="@color/deep_gray"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>

		<View

			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/deep_gray"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="20dp">
			<TextView
				android:id="@+id/password_tv"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/register_edit_height"
				android:layout_marginLeft="5dp"
				android:text="密码  "
				android:textSize="@dimen/txt_min_size"
				/>

			<EditText
				android:id="@+id/password_et"
				android:layout_width="match_parent"
				android:layout_height="@dimen/register_edit_height"

				android:maxEms="20"
				android:layout_marginRight="20dp"
				android:textSize="@dimen/txt_min_size"
				android:background="@drawable/register_edit"
				android:hint="6-20位字母数字或下划线"
				android:textColorHint="@color/deep_gray"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>
		<View

			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/deep_gray"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp">
			<TextView

				android:layout_width="wrap_content"
				android:layout_height="@dimen/register_edit_height"
				android:layout_marginLeft="5dp"
				android:text="确认密码"
				android:textSize="@dimen/txt_min_size"
				/>

			<EditText
				android:id="@+id/password_again_et"
				android:layout_width="match_parent"
				android:layout_height="@dimen/register_edit_height"

				android:maxEms="20"
				android:layout_marginRight="20dp"
				android:textSize="@dimen/txt_min_size"
				android:background="@drawable/register_edit"
				android:hint="6-20位字母数字或下划线"
				android:textColorHint="@color/deep_gray"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>

		<View

			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/deep_gray"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="65dp">
			<EditText
				android:id="@+id/yanzhengma_et"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="@dimen/register_edit_height"

				android:textColorHint="@color/deep_gray"
				android:hint="请输入验证码"

				android:textSize="@dimen/txt_min_size"

				android:background="@drawable/register_edit"
				android:layout_marginLeft="5dp"

				/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="获取验证码"
				android:background="@drawable/simple_green_stroke"
				android:layout_marginRight="20dp"
				android:textColor="@color/background_green"
				android:textSize="@dimen/txt_min_size"/>
		</LinearLayout>
		<View

			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/deep_gray"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="15dp">
			<TextView
				android:id="@+id/yaoqingma_tv"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/register_edit_height"
				android:layout_marginLeft="5dp"
				android:text="邀请码"
				android:textSize="@dimen/txt_min_size"
				/>

			<EditText
				android:id="@+id/yaoqingma_et"
				android:layout_width="match_parent"
				android:layout_height="@dimen/register_edit_height"

				android:layout_marginRight="20dp"
				android:textSize="@dimen/txt_min_size"
				android:background="@drawable/register_edit"
				android:hint="如有邀请码，在此输入（选填）"
				android:textColorHint="@color/deep_gray"
				android:layout_marginLeft="10dp"
				/>

		</LinearLayout>

		<View

			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/deep_gray"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/register_edit_height"
			android:orientation="horizontal"
			android:gravity="center">
			<CheckBox
				android:id="@+id/chakan_cb"
				android:layout_width="@dimen/simple_height20"
				android:layout_height="@dimen/simple_height20"
				android:button="@null"
				android:focusable="true"
				android:background="@drawable/login_radiobtn_selector"
				android:checked="false"
				android:layout_marginRight="10dp"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="我已查看并同意《用户服务协议》"
				android:textSize="@dimen/txt_mini_size"
				android:gravity="center_vertical"

				/>

		</LinearLayout>
		<Button
			android:id="@+id/yanzhengma_regbtn"
			android:layout_width="match_parent"
			android:layout_height="@dimen/simple_height4"
			android:text="注 册"
			android:background="@drawable/simple_btn_selector"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="20dp"

			android:textColor="@color/white"
			android:textSize="@dimen/txt_mid_size" />
	</LinearLayout>
<RelativeLayout
	android:id="@+id/second_page_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


		<TextView
			android:id="@+id/name_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginLeft="@dimen/simple_height3"
			android:text="用户名："
			android:layout_marginTop="@dimen/simple_height20"
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<EditText
			android:id="@+id/name_et"
			android:layout_width="@dimen/register_edit_width_name"
			android:layout_height="@dimen/register_edit_height"

			android:layout_marginRight="20dp"
			android:layout_toRightOf="@+id/name_tv"
			android:layout_alignBottom="@+id/name_tv"

			android:textSize="@dimen/txt_mid_size"
			android:background="@drawable/buttonstyle"
			/>


		<TextView
			android:id="@+id/psd_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_below="@+id/name_tv"
			android:layout_alignRight="@+id/name_tv"

			android:layout_marginTop="@dimen/indicate_mini_size"
			android:text="密码："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"
			/>
		<EditText
			android:id="@+id/psd_et"
			android:layout_width="@dimen/register_edit_width_name"
			android:layout_height="@dimen/register_edit_height"



			android:textSize="@dimen/txt_mid_size"
			android:inputType="textPassword"
			android:layout_toRightOf="@+id/psd_tv"
			android:layout_alignBottom="@+id/psd_tv"
			android:background="@drawable/buttonstyle"
			/>


		<TextView
			android:id="@+id/psd_again_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_below="@+id/psd_tv"
			android:layout_alignRight="@+id/psd_tv"
			android:layout_marginTop="@dimen/indicate_mini_size"
			android:text="确认密码："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>
		<EditText
			android:id="@+id/psd_again_et"
			android:layout_width="@dimen/register_edit_width_name"
			android:layout_height="@dimen/register_edit_height"

			android:layout_toRightOf="@+id/psd_again_tv"
			android:layout_alignBottom="@+id/psd_again_tv"

			android:textSize="@dimen/txt_mid_size"
			android:inputType="textPassword"
			android:background="@drawable/buttonstyle"
			/>


		<TextView
			android:id="@+id/xingming_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:layout_below="@+id/psd_again_tv"
			android:layout_alignRight="@+id/psd_tv"
			android:text="姓名："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<EditText
			android:id="@+id/xingming_et"
			android:layout_width="@dimen/register_edit_width_xingming"
			android:layout_height="@dimen/register_edit_height"


			android:layout_toRightOf="@+id/xingming_tv"
			android:layout_alignBottom="@+id/xingming_tv"
			android:textSize="@dimen/txt_mid_size"
			android:background="@drawable/buttonstyle"/>

		<TextView
			android:id="@+id/set_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"

			android:layout_toRightOf="@+id/xingming_et"
			android:layout_alignBottom="@+id/xingming_tv"
			android:text="性别："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"
			/>

		<Spinner
			android:id="@+id/sex_spinner"
			android:layout_width="@dimen/register_year_spinner_width"
			android:layout_height="@dimen/register_edit_height"
			android:layout_toRightOf="@+id/set_tv"
			android:layout_alignBottom="@+id/set_tv"
			android:background="@color/background_green"

			/>
	<ImageButton
		android:id="@+id/sex_spinner_image"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/register_edit_height"
		android:scaleType="centerInside"
		android:background="@color/background_green"
		android:layout_toRightOf="@+id/sex_spinner"
		android:layout_alignBottom="@+id/sex_spinner"

		android:src="@drawable/arrow_down"/>


		<TextView
			android:id="@+id/birth_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:text="生日："
			android:layout_below="@+id/xingming_tv"
			android:layout_alignRight="@+id/xingming_tv"
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<Spinner
			android:id="@+id/year_spinner"
			android:layout_width="@dimen/register_year_spinner_width"
			android:layout_height="@dimen/register_edit_height"

			android:background="@color/background_green"
			android:layout_toRightOf="@+id/birth_tv"
			android:layout_alignBottom="@+id/birth_tv"
			/>
	<ImageButton
		android:id="@+id/year_spinner_image"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/register_edit_height"
		android:scaleType="centerInside"
		android:background="@color/background_green"
		android:layout_toRightOf="@+id/year_spinner"
		android:layout_alignBottom="@+id/year_spinner"
        android:layout_marginRight="@dimen/indicate_mini_size"
		android:src="@drawable/arrow_down"/>
		<Spinner
			android:id="@+id/month_spinner"
			android:layout_width="@dimen/register_month_spinner_width"
			android:layout_height="@dimen/register_edit_height"
			android:background="@color/background_green"


			android:layout_toRightOf="@+id/year_spinner_image"
			android:layout_alignBottom="@+id/birth_tv"
			/>
	<ImageButton
		android:id="@+id/month_spinner_image"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/register_edit_height"
		android:scaleType="centerInside"
		android:background="@color/background_green"
		android:layout_toRightOf="@+id/month_spinner"
		android:layout_alignBottom="@+id/month_spinner"
		android:layout_marginRight="@dimen/indicate_mini_size"
		android:src="@drawable/arrow_down"/>
		<Spinner
			android:id="@+id/day_spinner"
			android:layout_width="@dimen/register_month_spinner_width"
			android:layout_height="@dimen/register_edit_height"
			android:background="@color/background_green"

			android:layout_toRightOf="@+id/month_spinner_image"
			android:layout_alignBottom="@+id/birth_tv"

			/>
	<ImageButton
		android:id="@+id/day_spinner_image"
		android:layout_width="wrap_content"
		android:layout_height="@dimen/register_edit_height"
		android:scaleType="centerInside"
		android:background="@color/background_green"
		android:layout_toRightOf="@+id/day_spinner"
		android:layout_alignBottom="@+id/day_spinner"
		android:layout_alignRight="@+id/sex_spinner_image"
		android:src="@drawable/arrow_down"/>

		<TextView
			android:id="@+id/id_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:layout_below="@+id/birth_tv"
			android:layout_alignRight="@+id/birth_tv"
			android:text="身份证："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<EditText
			android:id="@+id/id_et"
			android:layout_width="wrap_content"

			android:layout_height="@dimen/register_edit_height"

			android:layout_toRightOf="@+id/id_tv"
			android:layout_alignBottom="@+id/id_tv"
			android:layout_alignRight="@+id/day_spinner_image"
			android:ems="18"
			android:textSize="@dimen/txt_mid_size"
			android:background="@drawable/buttonstyle"

			/>


		<TextView
			android:id="@+id/mail_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:layout_below="@+id/id_tv"
			android:layout_alignRight="@+id/id_tv"
			android:text="电邮："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<EditText
			android:id="@+id/mail_et"
			android:layout_width="wrap_content"

			android:layout_height="@dimen/register_edit_height"


			android:layout_toRightOf="@+id/mail_tv"
			android:layout_alignBottom="@+id/mail_tv"
			android:layout_alignRight="@+id/id_et"

			android:ems="10"
			android:inputType="textEmailAddress"
			android:background="@drawable/buttonstyle"/>


		<TextView
			android:id="@+id/phone_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:layout_below="@+id/mail_tv"
			android:layout_alignRight="@+id/mail_tv"
			android:text="手机号："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>
		<EditText
			android:id="@+id/phone_et"
			android:layout_width="wrap_content"

			android:layout_height="@dimen/register_edit_height"


			android:layout_toRightOf="@+id/phone_tv"
			android:layout_alignBottom="@+id/phone_tv"
			android:layout_alignRight="@+id/mail_et"
			android:inputType="phone"
			android:ems="10"
			android:textSize="@dimen/txt_mid_size"
			android:background="@drawable/buttonstyle"
			/>




		<TextView
			android:id="@+id/address_tv"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/register_edit_height"
			android:layout_below="@+id/phone_tv"
			android:layout_alignRight="@+id/phone_tv"
			android:layout_marginTop="@dimen/indicate_mini_size"

			android:text="地址："
			android:textSize="@dimen/txt_mid_size"
			android:paddingTop="@dimen/register_edit_padding"/>

		<EditText
			android:id="@+id/address_et"
			android:layout_width="wrap_content"

			android:layout_height="@dimen/register_edit_height"




			android:layout_toRightOf="@+id/address_tv"
			android:layout_alignRight="@+id/phone_et"
			android:layout_alignBottom="@+id/address_tv"
			android:ems="10"
			android:textSize="@dimen/txt_mid_size"
			android:background="@drawable/buttonstyle"/>

	<Button

		android:id="@+id/ok_btn"
		android:layout_width="@dimen/login_btn_width"
		android:layout_height="@dimen/login_btn_height"
        android:layout_marginBottom="@dimen/register_reg_margin"
		android:background="@drawable/login_btn_selector"
		android:textColor="@color/white"
		android:textSize="@dimen/txt_mid_size"
		android:layout_below="@+id/address_et"

		android:layout_alignLeft="@+id/address_et"
		android:layout_marginTop="40dp"
		android:text="完 成" />


</RelativeLayout>
</LinearLayout>
