<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">



       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/simple_height4"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/program_name_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text="项目名称"
               android:textSize="@dimen/txt_min_size"
               android:gravity="center"
               android:layout_weight="2"/>
           <TextView
               android:id="@+id/value_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text="值"
               android:textSize="@dimen/txt_min_size"
               android:gravity="center"
               android:layout_weight="1"
               android:textColor="@color/red"/>
           <TextView
               android:id="@+id/unit_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text="单位"
               android:textSize="@dimen/txt_min_size"
               android:gravity="center"
               android:layout_weight="1.5"/>
           <TextView
               android:id="@+id/level_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text=""
               android:textSize="@dimen/txt_min_size"
               android:gravity="center"
               android:layout_weight="0.5"
               android:textColor="@color/red"/>
           <TextView
               android:id="@+id/range_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text="正常范围"
               android:textSize="@dimen/txt_min_size"
               android:gravity="center"
               android:layout_weight="3"/>
           <TextView
               android:id="@+id/operate_tv"
               android:layout_width="0dp"
               android:layout_height="@dimen/simple_height4"
               android:text="..."
               android:textSize="@dimen/txt_max_size"
               android:gravity="center"
               android:layout_weight="1.5"/>

       </LinearLayout>



</LinearLayout>
