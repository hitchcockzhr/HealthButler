<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/window_top_size"
        android:orientation="horizontal"
        android:background="@color/background_green">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/left_arrow"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/window_top_size"
            android:layout_weight="1"
            android:text="随访历史"
            android:textSize="@dimen/txt_max_size"
            android:gravity="center"

            android:layout_marginRight="40dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/simple_height4"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="随访时间"
            android:gravity="center"
            android:textSize="@dimen/txt_mid_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="随访模板"
            android:gravity="center"
            android:textSize="@dimen/txt_mid_size"/>
        <TextView
            android:layout_width="@dimen/simple_height8"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"/>

    </LinearLayout>

   <ListView
       android:id="@+id/history_listview"
       android:layout_width="match_parent"
       android:layout_weight="1"
       android:layout_height="0dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:divider="@color/light_gray"
       android:dividerHeight="1dp"
       android:listSelector="@color/white">

   </ListView>



</LinearLayout>
