<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/simple_height4"
    android:orientation="horizontal"

    android:layout_marginLeft="@dimen/padding_min_size"
    android:layout_marginRight="@dimen/padding_min_size"
    android:id="@+id/current_medicine_item_layout">

    <TextView
        android:id="@+id/xuhao_tv"  
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="2"  
        android:gravity="center"
        android:paddingBottom="10dip"  
        android:paddingTop="10dip" 
        android:enabled="true" 
        android:text="序号"
        android:textSize="@dimen/txt_10_size"/>


  
    <TextView
        android:id="@+id/yizhu_tv"
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:paddingBottom="10dip"  
        android:paddingTop="10dip"  
        android:gravity="center"  
        android:enabled="true" 
        android:text="医嘱"
        android:textSize="@dimen/txt_10_size"/>


  
    <TextView
        android:id="@+id/pingjunyongliang_tv"
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="5"  
        android:paddingBottom="10dip"  
        android:paddingTop="10dip"  
        android:gravity="center" 
        android:enabled="true"  
        android:text="平均用量"
        android:textSize="@dimen/txt_10_size"/>

	
	<TextView
        android:id="@+id/cishu_tv"
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="2"  
        android:paddingBottom="10dip"  
        android:paddingTop="10dip"  
        android:gravity="center"  
        android:enabled="true" 
        android:text="次数"
        android:textSize="@dimen/txt_10_size"/>

     <TextView
        android:id="@+id/tianshu_tv"
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="2"  
        android:paddingBottom="10dip"  
        android:paddingTop="10dip"  
        android:gravity="center"  
        android:enabled="true" 
        android:text="天数"
         android:textSize="@dimen/txt_10_size"/>

	<TextView
        android:id="@+id/shuliang_tv"
        android:layout_width="0dip"  
        android:layout_height="match_parent"
        android:layout_weight="3"  
        android:paddingBottom="10dip"  
        android:paddingTop="10dip"  
        android:gravity="center" 
        android:enabled="true"  
        android:text="数量"
        android:textSize="@dimen/txt_10_size"/>

    <TextView
        android:id="@+id/jiage_tv"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:gravity="center"
        android:enabled="true"
        android:text="价格"
        android:textSize="@dimen/txt_10_size"/>

	
    

</LinearLayout>