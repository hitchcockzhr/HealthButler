<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/gray"
    android:clipToPadding="true"

    android:fitsSystemWindows="true">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_top_height"
        android:orientation="horizontal" 
        android:background="@color/background_green">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="@string/left_arrow"
            android:gravity="center"
            android:textSize="@dimen/arrow_txt_size"
            android:textColor="@color/white"
            android:background="@color/background_green"/>
        
        />

    <TextView
            android:id="@+id/city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX城市" 
            android:textSize="@dimen/txt_max_size"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/head_imageview"
        android:gravity="center_vertical"/>

     <TextView
        android:id="@+id/hospital_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX医院  "
        android:textSize="@dimen/txt_max_size"
        android:layout_gravity="center_vertical"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/head_imageview"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/keshi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/txt_max_size"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/hospital_tv"
        android:textColor="#ffffff"
        android:text="科室    " />

     
 </LinearLayout>
     
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="#ffffff"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp" 
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp">
        
	    <com.housekeeper.ar.healthhousekeeper.RoundImageView
            android:id="@+id/head_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/header_photo" />

  <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/head_imageview"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/head_imageview"
            android:text="张三"
            android:textColor="#000000"
            android:textSize="@dimen/txt_max_size" />

        <TextView
            android:id="@+id/zhicheng_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name_tv"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/name_tv"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/txt_mid_size"
            android:textColor="#000000"
            android:text="主任医师" />

        <TextView
            android:id="@+id/zhuanchang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name_tv"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_tv"
            android:textSize="@dimen/txt_min_size"
            android:textColor="#5b5b5b"
            android:layout_toRightOf="@+id/head_imageview"
            android:text="专长：XXXXXXXXX" />

        <RatingBar
            android:id="@+id/ys_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/name_tv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/zhicheng_tv"
            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_height3"
        android:background="#FFFFFF"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/yyxq_wxz"
            android:textColor="#000000"
            android:textSize="20dip" />
        
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" "
            android:background="@drawable/yygh_wxz"
            android:textColor="#000000"
            android:textSize="20dip" />
        
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000000" />
           
        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" "
            android:textColor="#000000"
            android:background="@drawable/srys_wxz"
            android:textSize="20dip" />

        
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/background_green"/>

    <ImageView
        android:id="@+id/cursor"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:scaleType="matrix"
        android:src="@drawable/a" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"

        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
    

</LinearLayout>