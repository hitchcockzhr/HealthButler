<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_top_height"
        android:background="@color/background_green"
        android:orientation="horizontal">
        <Button
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:textSize="@dimen/arrow_txt_size"
            android:gravity="center"
            android:background="@color/background_green"
            android:textColor="@color/white"
            android:text="@string/left_arrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:text="版本日志"
            android:textSize="@dimen/txt_max_size"
            android:textColor="@color/white"/>

    </LinearLayout>


        <LinearLayout
            android:id="@+id/new_version_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_top_height"
            android:gravity="center_vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="更新版本："


                android:textSize="@dimen/txt_mid_size"/>
            <TextView
                android:id="@+id/new_version_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="6.2.2"


                android:textSize="@dimen/txt_mid_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="("


                android:textSize="@dimen/txt_mid_size"/>
            <TextView
                android:id="@+id/new_version_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="87M"


                android:textSize="@dimen/txt_mid_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=")"


                android:textSize="@dimen/txt_mid_size"/>

        </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/deep_gray"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"

       android:orientation="vertical">
       <ListView
           android:id="@+id/new_version_list_view"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:divider="@null"
           android:listSelector="@color/white"
           android:layout_margin="20dp"/>





   </LinearLayout>



</LinearLayout>
