<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width2"
    android:layout_height="@dimen/dialog_width2"
    android:orientation="vertical"
    android:id="@+id/modify_drug"
    android:background="@drawable/simple_gray_solid_shape"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_top_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"

            android:text="更新"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"

            android:textSize="@dimen/txt_max_size"
            android:textColor="@color/background_green"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_green"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发现新版本："
            android:textSize="@dimen/txt_mid_size"/>
        <TextView
            android:id="@+id/new_version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.1.2"
            android:textSize="@dimen/txt_mid_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=",是否更新？"
            android:textSize="@dimen/txt_mid_size"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="本次更新内容："
        android:layout_marginLeft="15dp"

        android:textSize="@dimen/txt_mid_size"

        />

    <ListView
        android:id="@+id/new_version_content_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:listSelector="@color/white">

    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_gray"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"

        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="否"
            android:textSize="@dimen/txt_mid_size"
            android:background="@color/gray"
            android:layout_gravity="center_vertical"

            />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/deep_gray"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="是"
            android:focusable="false"
            android:textSize="@dimen/txt_mid_size"

            android:background="@color/gray"/>
    </LinearLayout>

</LinearLayout>
