<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:clipToPadding="true"

    android:fitsSystemWindows="true"
    >
    
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_height3"
        android:text="   患者评价"
        android:gravity="center_vertical"
        android:textSize="@dimen/txt_mid_size"
        android:textColor="@color/background_green" />
   
      <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="#f5f5f5" />
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:orientation="horizontal"
       android:gravity="center_horizontal"
       >
       <TextView
        android:id="@+id/zhunshi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准时"
        android:textColor="#5b5b5b"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/txt_mid_size" />
       <RatingBar
            android:id="@+id/zs_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:orientation="horizontal"
       android:gravity="center_horizontal"
       >
      <TextView
        android:id="@+id/zhunque_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准确" 
        android:textColor="#5b5b5b"
        android:layout_marginTop="15dp"

        android:textSize="@dimen/txt_mid_size"  />
       <RatingBar
            android:id="@+id/zq_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:orientation="horizontal"
       android:gravity="center_horizontal"
       >
       <TextView
        android:id="@+id/youxiao_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有效" 
        android:textColor="#5b5b5b"
        android:layout_marginTop="15dp"

        android:textSize="@dimen/txt_mid_size"  />
       <RatingBar
            android:id="@+id/yx_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:orientation="horizontal"
       android:gravity="center_horizontal"
       >
       <TextView
        android:id="@+id/jingji_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="经济" 
        android:textColor="#5b5b5b"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/txt_mid_size"  />
       <RatingBar
            android:id="@+id/jj_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="#ffffff"
    	android:orientation="horizontal"
       android:gravity="center_horizontal"
       >
      <TextView
        android:id="@+id/naixin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="耐心" 
        android:textColor="#5b5b5b"
        android:layout_marginTop="15dp"

        android:textSize="@dimen/txt_mid_size"  />
       <RatingBar
            android:id="@+id/nx_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:numStars="5"
         	android:rating="4"
         	style="@style/roomRatingBar" />
   </LinearLayout>

    

    
    <TextView
        android:id="@+id/ysjj_tv"
        android:text="   医生简介" 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_height3"
        android:gravity="center_vertical"
        android:textSize="@dimen/txt_mid_size"
        android:textColor="@color/background_green" />
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:background="#f5f5f5" />

    <TextView
        android:id="@+id/ysjj_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="梁瑞敏  男  1954年10月出生，大学本科学历。1974年毕业于山西中医学校，同年来我院从事肝病、消化科临床。1977～1980年先后在山西医学院、山西医学院第一附属医院进行理论学习和临床进修。从1994年起任肝病研究所（科）副所长、副主任。现任山西省中医药研究院肝病研究所（肝病科）所长、主任，主任医师。" 
        android:layout_margin="10dp"
        android:textSize="@dimen/txt_mid_size"
        android:textColor="@color/gray_txt"/>

</LinearLayout>